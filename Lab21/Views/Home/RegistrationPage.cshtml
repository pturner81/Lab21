
@{
    ViewBag.Title = "RegistrationPage";
}

<h2>Registration Page</h2>

<h3 class="subtitle">Please fill in the form to register</h3>

<form action="/Home/AddUser" class="form-horizontal">  
    <label class="control-label">First Name</label> <input type="text" class="form-control"required id="fName" name="FirstName" placeholder="First Name"/>
    <label class="control-label">Last Name </label><input type="text" class="form-control" id="lName"required name="LastName"/>
    <label class="control-label">Email </label><input type="email" class="form-control" id="email" name="Email" required/>
    <label class="control-label">Phone Number </label><input type="number" class="form-control" min="1000000000" max="9999999999" id="pNumber" name="PhoneNumber" required/>
    <label class="control-label">Password </label><input type="password" class="form-control" id="password" name="Password" required/> <br/><br />
    <input type="submit" value="Register!" class="btn-default" />
</form>


